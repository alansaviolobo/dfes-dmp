{
  "name": "Development map layer configuration defined by amche-goa community",
  "areaOfInterest": "Goa, India",
  "version": "0.1.0",
  "url": "https://github.com/publicmap/amche-goa/blob/main/config/goa.atlas.json",
  "color": "#2563eb",
  "map": {
    "center": [
      73.8,
      15.47
    ],
    "zoom": 11.4
  },
  "layers": [
    {
      "id": "traffic",
      "title": "Traffic",
