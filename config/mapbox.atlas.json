      "styleLayer": "satellite",
      "style": {
        "raster-brightness-min": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          8,
          0.5,
          16,
          0.3
        ],
        "raster-brightness-max": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          8,
          0.7,
          16,
          0.8
        ],
        "raster-opacity": 1
      }
    }
