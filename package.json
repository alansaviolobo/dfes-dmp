{
  "name": "amche-goa",
  "version": "0.1.0",
  "description": "Open community web GIS platform to interact with map data from various sources, made in Goa for the world.",
  "main": "index.html",
  "scripts": {
    "start": "vite --port 4035 --host",
    "dev": "vite --port 4035 --host",
    "build": "vite build",
    "build:webpack": "webpack",
    "preview": "vite preview --port 4035",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npm run lint:json",
    "lint:json": "node js/tests/lint-json.js"
  },
  "keywords": [
    "goa",
    "map",
    "community",
    "open-data",
    "mapbox"
  ],
  "author": "Amche Goa Community",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^3.1.4",
    "ajv": "^8.12.0",
    "clean-css": "^5.3.3",
    "copy-webpack-plugin": "^13.0.1",
    "glob": "^10.3.0",
    "html-webpack-plugin": "^5.6.5",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "webpack-cli": "^6.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/js/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "config/**/*.atlas.json",
      "!**/node_modules/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/publicmap/amche-goa.git"
  },
  "homepage": "https://amche.in",
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "lz-string": "^1.5.0",
    "webpack": "^5.103.0"
  }
}
